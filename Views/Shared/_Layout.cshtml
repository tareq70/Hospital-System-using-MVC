<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITI_Training_Hospital_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITI_Training_Hospital_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4 shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    🏥 Hospital System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light modern-btn" asp-controller="Patient" asp-action="Index">
                                👨‍⚕️ Patients
                            </a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light modern-btn" asp-controller="Doctor" asp-action="Index">
                                🩺 Doctors
                            </a>
                        </li> 
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light modern-btn" asp-controller="Hospital" asp-action="Index">
                                🏥 Hospitals
                            </a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light modern-btn" asp-controller="MedicalRecord" asp-action="Index">
                                📑 Medical Records
                            </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />

                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <main class="flex-grow-1">
        <!-- هنا محتوى الصفحة -->
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 border-top" style="background-color: #343a40;">
        <div class="container d-flex justify-content-between align-items-center">
            <span style="color: #e9ecef;">
                © 2025 - Hospital System
            </span>

            <a asp-controller="Home" asp-action="Privacy"
               class="text-decoration-none"
               style="color: #e9ecef;">
                Privacy Policy
            </a>
        </div>
    </footer>

    <style>
        /* ===== Make body full height ===== */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        /* ===== Main content takes remaining space ===== */
        .main-content {
            flex: 1 0 auto;
        }

        /* ===== Footer fixed at bottom ===== */
        .footer {
            background-color: #2f3640; /* dark grey */
            color: #fff;
            flex-shrink: 0;
        }

            /* Optional: Hover for privacy link */
            .footer a:hover {
                color: #00a8ff;
                text-decoration: underline;
            }
    </style>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
