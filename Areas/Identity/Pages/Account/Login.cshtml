@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<style>
    /* ===== Page Background ===== */
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
        overflow-x: hidden;
    }

    /* ===== Center Container ===== */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    /* ===== Glassmorphism Card ===== */
    .login-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.35);
        padding: 40px 30px;
        max-width: 400px;
        width: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255,255,255,0.3);
    }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.45);
        }

        /* ===== Headings ===== */
        .login-card h3 {
            text-align: center;
            font-weight: 700;
            margin-bottom: 10px;
            color: #fff;
        }

        .login-card p {
            text-align: center;
            color: rgba(255,255,255,0.85);
            margin-bottom: 30px;
        }

    /* ===== Form Controls ===== */
    .form-floating > input {
        border-radius: 12px;
        height: 50px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        background: rgba(255,255,255,0.25);
        border: none;
        color: #fff;
        transition: 0.3s ease;
    }

        .form-floating > input:focus {
            background: rgba(255,255,255,0.45);
            box-shadow: 0 0 8px rgba(255,255,255,0.5);
            outline: none;
        }

    .form-floating > label {
        font-weight: 500;
        color: #fff;
    }

    /* ===== Buttons ===== */
    .btn-modern {
        width: 100%;
        padding: 12px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        border: none;
        color: #fff;
        background-size: 200% 200%;
        transition: all 0.3s ease;
    }

    /* Animated Gradient Button */
    .btn-login {
        background-image: linear-gradient(45deg, #ff6a00, #ee0979, #ff6a00);
        background-size: 300% 300%;
        animation: gradient 4s ease infinite;
    }

        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.35);
        }


    /* ===== Text Links ===== */
    .text-link {
        color: #ffd700;
        text-decoration: none;
        transition: all 0.25s ease;
    }

        .text-link:hover {
            color: #fff;
            text-decoration: underline;
        }

    /* ===== External Login Buttons ===== */
    .external-btn {
        width: 100%;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        background: rgba(255,255,255,0.2);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.3);
    }

        .external-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.35);
            background: rgba(255,255,255,0.35);
        }


</style>

<div class="login-container">
    <div class="login-card">
        <h3>Welcome Back 👋</h3>
        <p>Log in to your account</p>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" autocomplete="current-password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <a asp-page="./ForgotPassword" class="text-link small">Forgot password?</a>
            </div>

            <button type="submit" class="btn-modern btn-login">Log in</button>
        </form>

        <div class="text-center mt-4">
            <p class="mb-1">
                Don’t have an account? <a asp-page="./Register" class="text-link fw-semibold">Register</a>
            </p>
            <p>
                <a asp-page="./ResendEmailConfirmation" class="small text-muted text-decoration-none">Resend email confirmation</a>
            </p>
        </div>

        <hr />

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div>
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <form method="post" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                        <button type="submit" name="provider" value="@provider.Name" class="external-btn">
                            Log in using @provider.DisplayName
                        </button>
                    </form>
                }
            </div>
        }
        else
        {
            <p class="text-muted small">
                No external login providers configured. <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-link">Learn more</a>.
            </p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Floating effect for inputs
        document.querySelectorAll('.form-floating input').forEach(input => {
            input.addEventListener('focus', () => input.parentElement.classList.add('focused'));
            input.addEventListener('blur', () => input.parentElement.classList.remove('focused'));
        });
    </script>
}
