@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<style>
    /* ===== Page Background ===== */
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    /* ===== Center Container ===== */
    .confirm-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    /* ===== Glassmorphism Card ===== */
    .confirm-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.35);
        padding: 40px 30px;
        max-width: 400px;
        width: 100%;
        text-align: center;
        color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255,255,255,0.3);
    }

        .confirm-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.45);
        }

        /* ===== Headings ===== */
        .confirm-card h3 {
            font-weight: 700;
            margin-bottom: 20px;
            color: #fff;
        }

    /* ===== Status Message ===== */
    .status-message {
        background: rgba(255,255,255,0.25);
        padding: 15px;
        border-radius: 12px;
        margin-top: 20px;
        color: #fff;
        font-weight: 500;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    /* ===== Buttons ===== */
    .btn-modern {
        width: 100%;
        padding: 12px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        border: none;
        color: #fff;
        margin-top: 20px;
        transition: all 0.3s ease;
        background-image: linear-gradient(45deg, #ff6a00, #ee0979, #ff6a00);
        background-size: 300% 300%;
        animation: gradient 4s ease infinite;
    }

        .btn-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.35);
        }

    
</style>

<div class="confirm-container">
    <div class="confirm-card">
        <h3>Confirm Email</h3>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="status-message">
                @Model.StatusMessage
            </div>
        }

        <a asp-page="/Account/Login" class="btn-modern">Go to Login</a>
    </div>
</div>
